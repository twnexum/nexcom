<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/tx 
		http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
    <context:component-scan base-package="de.nexum.commerce" />
    
    <context:property-placeholder location="classpath:jdbc.properties"/>
    
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" >
		<property name="driverClassName" value="${jdbc.driverClassName}"/>
		<property name="url" value="${jdbc.url}"/>
		<property name="username" value="${jdbc.username}"/>
		<property name="password" value="${jdbc.password}"/>
		<property name="testWhileIdle" value="true" />
		<property name="testOnBorrow" value="true" />
		<property name="testOnReturn" value="false" />
		<property name="validationQuery" value="${jdbc.validationQuery}" />
		<property name="timeBetweenEvictionRunsMillis" value="5000" />
		<property name="maxActive" value="50" />
		<property name="minIdle" value="10" />
		<property name="maxWait" value="10000" />
		<property name="initialSize" value="10" />
		<property name="removeAbandonedTimeout" value="60" />
		<property name="removeAbandoned" value="true" />
		<property name="logAbandoned" value="true" />
		<property name="minEvictableIdleTimeMillis" value="30000" />
	</bean>
	
	<bean id="priceDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericPriceDAOImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="attributeDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericAttributeDAOImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="productDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericProductDAOImpl">
		<property name="dataSource" ref="dataSource" />		
	</bean>	
	
	<bean id="variantDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericVariantDAOImpl">
		<property name="dataSource" ref="dataSource" />		
	</bean>			
	
	<bean id="collectionVariantDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericCollectionVariantDAOImpl">
		<property name="dataSource" ref="dataSource" />		
	</bean>			
	
	<bean id="variantProductDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericVariantProductDAOImpl">
		<property name="dataSource" ref="dataSource" />				
	</bean>	
	
	<bean id="inventoryDAO" class="de.nexum.commerce.backend.dao.impl.PgGenericInventoryDAOImpl">
		<property name="dataSource" ref="dataSource" />				
	</bean>		
	
	<bean id="helperDAO" class="de.nexum.commerce.backend.dao.impl.PgHelperDAOImpl">
		<property name="dataSource" ref="dataSource" />				
	</bean>			 

</beans>